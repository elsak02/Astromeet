<div class="container content">
  <div class="row">
    <div class="d-flex align-items-center justify-content-center mt-3">
      <div id="l-box-shadow" class="my-4">
        <% if @astrologist.user.photo.attached? %>
          <%= cl_image_tag @astrologist.user.photo.key, width: 338, heigth: 450 %>
        <% end %>
      </div>
      <div class=" d-flex align-items-center position-relative">
        <div class="infos container-right-text ml-5">
          <h1><%= @astrologist.user.first_name %> <%= @astrologist.user.last_name %></h1>
          <p><%= @astrologist.experience%></p>
          <h3 class="mb-5"> Price per hour: <%= @astrologist.price %>â‚¬</h3>
          <% if user_signed_in? && current_user.id == @astrologist.user_id%>
            <%= link_to "Edit offer", edit_astrologist_path(@astrologist), class: "button" %>
          <% else %>
            <%= link_to "Book this Astrologist", new_astrologist_booking_path(@astrologist), class: "button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <p>
  <a class="button" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
    <%=@astrologist.user.first_name%>'s Reviews
  </a>
</p>
  <div class="collapse" id="collapseExample">
    <div class="reviews">
      <div class="row">
        <% @astrologist.reviews.sort.reverse.each do |review| %>
          <div class="col-6">
            <div class="box-rating card-body">
              <%= cl_image_tag review.booking.user.photo.key, class: "avatar" %>
              <p><%= review.booking.user.first_name %></p>
              <p><i class="fas fa-star"><%= review.rating %></i></p>
              <p><i class="fas fa-quote-left quote"></i><%= review.comment%> <i class="fas fa-quote-right quote"></i></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
