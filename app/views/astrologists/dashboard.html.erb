<div class="container content">
  <div class="profile-card-dash mt-5 mb-4 mr-5">
        <div class="card-top" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.1)), url('<%= cl_image_path current_user.photo.key %>')">
          <div class="name-card">
            <h1><%= current_user.first_name %></h1>
            <h1 class="horizontal-line pb-3"><%= current_user.last_name %></h1>
          </div>
        </div>
        <div class="card-bottom">
          <p> <strong>Date of birth:</strong> <%= current_user.birth_date.strftime(" %A %e %B %Y") %></p>
          <p> <strong>Number of Bookings:</strong> <%= @astrologist.bookings.count %></p>
          <p> <strong>Number of Reviews:</strong> <%= @astrologist.reviews.count %></p>
          <p> <strong>Average of my Ratings:</strong> <%@astrologist.rating_average.times do%>
              <i class="fas fa-star"></i>
            <% end %>
          </p>
        </div>
       </div>
       <div class="text-center">
        <%= link_to 'Show my astrologist profile', astrologist_path(current_user.astrologists.first), class: "button my-3 mr-4" %>
        <%= link_to 'Edit astrologist profile', edit_astrologist_path(current_user.astrologists.first), class: "button my-3 mr-4" %>
      </div>

    <div class="reviews text-center my-5">
    <h2>My Bookings</h2>
      <div class="row">
        <% @astrologist.bookings.sort.reverse.each do |booking| %>
          <div class="col-6">
            <div class="box-rating">
              <div class="d-flex justify-content-between align-items-centermx-3">
                <div class="d-flex">
                  <%= cl_image_tag booking.user.photo.key, class: "avatar-large" %>
                  <div class="text-left ml-3">
                    <p class="mb-0"><strong>Name:</strong> <%= booking.user.first_name %> <%= booking.user.last_name %></p>
                    <p class="mb-0"><strong>Booking date:</strong> <%= booking.date.strftime(" %A %e %B %Y") %> <%= booking.time.strftime(" %l %p %M") %></p>
                    <p class="mb-0"><strong>Birth date of client:</strong> <%= booking.user.birth_date.strftime(" %A %e %B %Y") %> <%= booking.user.birth_time.strftime(" %l %p %M") %></p>
                    <p class="mb-0"><strong>Birth place of client:</strong> <%= booking.user.birth_place %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>

    <div class="reviews text-center my-5">
    <h2>My Reviews</h2>
      <div class="row">
        <% @astrologist.reviews.sort.reverse.each do |review| %>
          <div class="col-6">
            <div class="box-rating">
              <div class="d-flex justify-content-between align-items-centermx-3">
                <div class="d-flex">
                  <%= cl_image_tag review.booking.user.photo.key, class: "avatar-large" %>
                  <div class="text-left ml-3">
                    <p class="mb-0"><%= review.booking.user.first_name %></p>
                    <p id="date-booking"><%= review.booking.date.strftime("%B %Y") %></p>
                  </div>
                </div>
                <p>
                  <% review.rating.times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                </p>
              </div>
              <p class="mt-3 pl-3 text-left"><%= review.comment%></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
</div>
